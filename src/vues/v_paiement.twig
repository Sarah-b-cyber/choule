{% extends "base.twig" %}

{% block title %}Choisissez votre méthode de paiement{% endblock %}

{% block content %}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh; margin-top: 80px;">
    <div class="card shadow-lg p-4 text-center" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <h2 class="card-title text-primary">Paiement de {{ montant }} €</h2>
            <p class="card-text">Veuillez choisir votre méthode de paiement.</p>

            <div class="d-grid gap-3">
                <!-- Bouton Stripe -->
                <a href="index.php?uc=dons&action=paiement_stripe&montant={{ montant }}&id_don={{ id_don }}" class="btn btn-dark btn-lg">
                    <i class="fas fa-credit-card"></i> Payer avec Stripe
                </a>

                <!-- Bouton PayPal -->
                <a href="index.php?uc=dons&action=paiement_paypal&montant={{ montant }}&id_don={{ id_don }}" class="btn btn-warning btn-lg">
                    <i class="fab fa-paypal"></i> Payer avec PayPal
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
