{% extends "base.twig" %} 

{% block title %}Accueil - Oratoire du Palais{% endblock %}

{% block content %}
    <header class="text-center">
        <img src="src/image/oratoire.jpg" alt="Oratoire">
        <h1>Bienvenue à l'Oratoire du Palais</h1>
        <p>Un lieu de prière et d'étude dédié à la communauté.</p>
    </header>
    
    <section class="container text-center rabbanim section-degrade" id="rabanims">
        <h2>Nos Rabbanim</h2>
        <div class="row justify-content-center">
            {% for rabbin in rabbins %}
                <div class="col-md-4">
                    <img src="{{ rabbin.image }}" alt="{{ rabbin.nom }}">
                    <p class="text-dark fw-bold">{{ rabbin.nom }}</p>
                </div>
            {% endfor %}
        </div>
    </section>
    
    <section class="container text-center equipe section-blanc" id="equipe">
        <h2>Notre Équipe</h2>
        <div class="row justify-content-center">
            {% for membre in equipe %}
                <div class="col-md-4">
                    <img src="{{ membre.image }}" alt="{{ membre.nom }}">
                    <p class="text-dark fw-bold">{{ membre.nom }}</p>
                </div>
            {% endfor %}
        </div>
    </section>
    
    <footer class="text-center mt-5 py-4 bg-light">
        <p class="fw-bold mb-1">Adresse :</p>
        <p class="text-muted">{{ adresse }}</p>

        <p class="fw-bold mb-1">Contact :</p>
        <p class="text-muted">{{ contact }}</p>

        <div id="map" class="mt-3">
            <a href="{{ map_url }}" target="_blank">
                <iframe src="{{ map_embed_url }}" 
                        width="100%" 
                        height="300" 
                        style="border:0; border-radius: 10px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </a>
        </div>
    </footer>
{% endblock %}
