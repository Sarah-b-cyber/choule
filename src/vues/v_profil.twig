{% extends "base.twig" %}

{% block title %}Mon Profil{% endblock %}

{% block content %}

{% if user.role == 'fidele' %}


    {% set retour_link = "index.php?uc=accueilfid" %}
{% else %}
    {% set retour_link = "index.php?uc=admin" %}
{% endif %}

<div class="container d-flex justify-content-center mt-5">
    <div class="card shadow-sm p-4 border border-secondary rounded-3" style="max-width: 600px; width: 100%;">
        <div class="mb-3">
            <a href="{{ retour_link }}" class="text-primary text-decoration-none">
                <i class="fas fa-arrow-left"></i> Retour à l'accueil
            </a>
        </div>
        <h2 class="text-center text-dark fw-semibold mb-3">Mon Profil</h2>

        <div class="row">
            <div class="col-12">
                <p><strong>Nom :</strong> {{ user.name | e }}</p>
                <p><strong>Prénom :</strong> {{ user.prenom | e }}</p>
                <p><strong>Email :</strong> {{ user.email | e }}</p>
                <p><strong>Adresse :</strong> {{ user.adresse | e }}</p>
                <p><strong>Code Postal :</strong> {{ user.code_postal | e }}</p>
                <p><strong>Ville :</strong> {{ user.ville | e }}</p>
                <p><strong>Pays :</strong> {{ user.pays | e }}</p>
            </div>
        </div>

        <div class="text-center mt-3">
            <a href="index.php?uc=profil&action=edit" class="btn btn-outline-primary btn-sm">
                Modifier
            </a>
        </div>
    </div>
</div>
{% endblock %}
