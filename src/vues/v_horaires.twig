{% extends "base.twig" %}

{% block title %}Horaires - Oratoire du Palais{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h1 class="text-center text-dark fw-bold mb-4">Horaires des Prières</h1>

        {% if message %}
            <div class="alert alert-success">{{ message }}</div>
        {% endif %}
        {% if erreur %}
            <div class="alert alert-danger">{{ erreur }}</div>
        {% endif %}

        <div class="text-center">
            <iframe src="{{ fichier_horaires }}" width="100%" height="600px" 
            style="border: none; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);">
            </iframe>
        </div>

        <div class="text-center mt-4">
            <a href="{{ fichier_horaires }}" download class="btn btn-dark">
                <i class="fas fa-file-download"></i> Télécharger les Horaires
            </a>
        </div>
        <pre>

        </pre>

        {% if isAdmin %}
            <hr class="my-4">
            <h3 class="text-center">Importer un nouveau fichier PDF</h3>
          <form action="index.php?uc=horaire&action=upload" method="post" enctype="multipart/form-data" class="mt-3 text-center">
        <input type="file" name="horaire_pdf" accept="application/pdf" required class="form-control mb-3">
        <button type="submit" class="btn btn-primary">Importer le fichier</button>
        </form>
         <div class="mt-3">
            <a href="index.php?uc=admin" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Retour à l'accueil
            </a>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
