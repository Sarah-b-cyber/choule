{% extends "base.twig" %}

{% block title %}Ajouter un Don{% endblock %}

{% block content %}
<div class="container mt-5">
    <h2 class="text-center text-primary fw-bold">Ajouter un Don</h2>
       <div class="card shadow-lg border border-secondary p-4 mt-3">
        <form action="index.php?uc=admin2&action=add_don" method="post">
            <div class="mb-3">
        <label for="donateur" class="form-label">Nom du Donateur</label>
           <input list="donateurs-list" name="donateur" id="donateur" class="form-control" required>
           <datalist id="donateurs-list">
        {% for donateur in donateurs %}
            <option value="{{ donateur.full_name }}">{{ donateur.full_name }}</option>
        {% endfor %}
           </datalist>
        </div>
         <div class="mb-3">
                <label for="montant" class="form-label">Montant (€)</label>
                <input type="number" step="0.01" name="montant" id="montant" class="form-control" required>
            </div>

             <div class="mb-3">
                <label for="Mitsva" class="form-label">Mitsva </label>
                <input type="text" step="0.01" name="mitsva" id="mitsva" class="form-control" required>
            </div>

            
             <div class="mb-3">
                <label for="Raison" class="form-label">Raison </label>
                <input type="text" step="0.01" name="raison" id="raison" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="date" class="form-label">Date</label>
                <input type="date" name="date" id="date" class="form-control" >
            </div>


             <div class="mb-3">
                <label for="methode" class="form-label">Méthode de paiement</label>
                <input type="text" name="methode" id="methode" class="form-control" >
            </div> 
            
            <div class="mb-2">
                <label class="form-label">Statut</label>
                <select name="status" class="form-control" required>
                  <option value="en attente" {% if don.status == 'en attente' %}selected{% endif %}>En attente</option>
                  <option value="validé" {% if don.status == 'validé' %}selected{% endif %}>Validé</option>
                    
                </select>
            </div>

            <button type="submit" class="btn btn-success">Ajouter</button>
            <a href="index.php?uc=admin2" class="btn btn-secondary">Retour</a>

            
        </form>
    </div>
</div>
{% endblock %}
